{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Welcome page
{% endblock %}

{% block body %}
    <div class="page--homepage">
        <div data-balloon="Click picture to see more" data-balloon-pos="bottom" class="header">
            {% include 'widgets/weather.html.twig' %}
        </div>

        <div class="mainContent">
            <nav>
                <span class="js-homepage-showpage active" data-page="widgets">Notes</span>
                <span class="js-homepage-showpage" data-page="feeds">Feed overview</span>
            </nav>

            <div class="views">
                <div class="view widgets">
                    {% include 'widgets/notes.html.twig' with {'notes':notes }  %}
                    <div class="checklist-widget">{% include 'widgets/checklist.html.twig' with {'todos': todos } %}</div>
                </div>

                <div class="view feeds">
                    Loading feeds...
                </div>
            </div>

        </div>
    </div>
{% endblock %}
